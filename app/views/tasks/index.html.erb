<div class="page-header">
  <h1><%=t '.title', :default => Task.model_name.human.pluralize.titleize %></h1>
</div>
<div>
  <%= form_tag(tasks_path, :method => "get") do %>
    <%= collection_select :event, :event_id, @events, :id, :name, {:include_blank => "All events", :selected => @event_id} %>
    <%= submit_tag 'Filtern' %>
  <% end %>
</div>
<%= render :partial => 'tasks_box', :locals => {:tasks => @tasks} %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_path,
            :class => 'btn btn-primary' %>
