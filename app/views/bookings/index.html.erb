<%- model_class = Booking -%>
<% page_header = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% title page_header %>
<div class="page-header">
  <h1><%= page_header %></h1>
</div>
<div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:start) %></th>
          <th><%= model_class.human_attribute_name(:end) %></th>
          <th><%= model_class.human_attribute_name(:event_id) %></th>
          <th><%= model_class.human_attribute_name(:room_id) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= link_to booking.id, booking_path(booking) %></td>
            <td><%= booking.name %></td>
            <td><%= booking.description %></td>
            <td><%= booking.start %></td>
            <td><%= booking.end %></td>
            <td><%= booking.event_id %></td>
            <td><%= booking.room_id %></td>
            <td><%=l booking.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_booking_path(booking), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          booking_path(booking),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_booking_path,
            :class => 'btn btn-primary' %>
