<%= select_tag 'rooms[]',
    options_from_collection_for_select(Room.all, :id, :name),
    { :class => 'selectpicker', :multiple => '', :'data-live-search' => "true" }%>

<script>
  $('.selectpicker').selectpicker();
</script>

<h4><%= t User.model_name.human.pluralize.titleize %></h4>
<% users.each do |user| %>
  <% form_name = 'User:' + user.id.to_s %>
  <%= check_box_tag form_name, "1", user.has_permission(@permission) %> 
  <%= label_tag form_name, user.username %> <br/>
<% end %>
<h4><%= t Group.model_name.human.pluralize.titleize %></h4>
<% groups.each do |group| %>
  <% form_name = 'Group:' + group.id.to_s %>
  <%= check_box_tag form_name, "1", group.has_permission(@permission) %> 
  <%= label_tag form_name, group.name %> <br/>
<% end %>