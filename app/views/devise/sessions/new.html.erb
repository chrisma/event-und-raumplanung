<% title t('devise.sessions.new.title') %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-group" }) do |f| %>
    <%= f.hidden_field :identity_url, :value => Rails.application.config.login["identity_url"] %>
    <%= f.submit t('devise.sessions.new.login'), :class => 'btn btn-primary btn-lg' %>
<% end %>

<%= render "devise/shared/links" %>
