<%- model_class = Equipment -%>
<% title @equipment.name %>
<div class="page-header">
  <h1><%= @equipment.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t '.description' %>:</strong></dt>
  <dd><%= @equipment.description %></dd>
  
  <dt><strong><%= t '.room' %>:</strong></dt>
  <% if @equipment.room_id? %>
    <dd><%= Room.find(@equipment.room_id).name %></dd>
  <% else %>
    <dd>-</dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              equipment_index_path, :class => 'btn btn-default'  %>

<% if can? :edit, Equipment %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_equipment_path(@equipment), :class => 'btn btn-default' %>

<% end %>
<% if can? :destroy, Equipment %>
  <%= link_to t('.delete', :default => t("helpers.links.destroy")),
              equipment_path(@equipment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>