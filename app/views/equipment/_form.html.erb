<%= form_for @equipment, :html => { :class => "form-horizontal equipment" } do |f| %>

    <% if @equipment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'errors.template.header.other', :model => Equipment.model_name.human, :count => @equipment.errors.count %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @equipment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@equipment[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@equipment[:description]) %>
  </div>
  
  <div class="control-group">
    <%= f.label :room_id, :class => 'control-label' %>
    
    <div class="row">
      <div class="col-md-6">
        <div class="controls">
          <%= f.text_field( 
            :room_id, 
            :class => 'form-control') %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="controls">
          <%= f.collection_select(:room_id, Room.order(:name), :id, :name, {include_blank: '- Select Room -'}, {class: 'form-control'}) %>
        </div>
      </div>
    </div>
    <%= error_span(@equipment[:room_id]) %>
  </div>

  <div class="control-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :category, :class => 'form-control' %>
    </div>
    <%= error_span(@equipment[:category]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            equipment_index_path, :class => 'btn btn-default' %>

<% end %>
