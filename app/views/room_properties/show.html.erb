<%- model_class = RoomProperty -%>
<% title @roomProperty.name %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @roomProperty.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              room_properties_path, :class => 'btn btn-default' %>
<% if can? :edit, @roomProperty %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_room_property_path(@roomProperty), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @roomProperty %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              room_property_path(@roomProperty),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
