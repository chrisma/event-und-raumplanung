<%- model_class = RoomProperty -%>
<% page_header = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% title page_header %>
<div class="page-header">
  <div class="row">
    <div class="col-md-11">
      <h1><%= page_header %></h1>
    </div>
    <div class="col-md-1">
      <h1 class="text-right">
        <%= link_to t('.new', :default => t("helpers.links.new")),
                      new_room_property_path,
                      :class => 'btn btn-primary' %>
      </h1>
    </div>
  </div>
</div>
<div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @roomProperties.each do |roomProperty| %>
          <tr>
            <td><%= link_to roomProperty.name, room_property_path(roomProperty) %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_room_property_path(roomProperty), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          room_property_path(roomProperty),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
