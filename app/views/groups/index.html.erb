<%- model_class = Group -%>
<% page_header = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% title page_header %>
<div class="page-header">
  <h1><%= page_header %></h1>
</div>
<div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <% if can? :destroy, Group %>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= link_to group.name, group_path(group) %></td>
            <% if can? :destroy, group %>
              <td>
                <%= link_to group_path(group),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :title => t("helpers.links.destroy"), :class => 'btn btn-xs btn-danger' do %>
                  <span class="glyphicon glyphicon-trash"></span>   
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>
<% if can? :create, Group %>
  <%= link_to new_group_path, :title => t("helpers.links.new"), :class => 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus"></span>
<% end %>
<% end %>
