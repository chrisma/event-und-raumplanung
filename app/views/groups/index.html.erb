<%- model_class = Group -%>
<% page_header = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% title page_header %>
<div class="page-header">
  <div class="row">
    <div class="col-md-11">
      <h1><%= page_header %></h1>
    </div>
    <div class="col-md-1">
      <% if can? :create, Group %>
        <h1 class="text-right">
          <%= link_to new_group_path, :title => t("helpers.links.new"), :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </h1>
      <% end %>
    </div>
  </div>
</div>
<div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <% if can? :destroy, Group %>
            <th class="text-right"><%=t '.actions', :default => t("helpers.actions") %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= link_to group.name, group_path(group) %></td>
            <% if can? :destroy, group %>
              <td class="text-right">
                <%= link_to group_path(group),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :title => t("helpers.links.destroy"), :class => 'btn btn-xs btn-danger' do %>
                  <span class="glyphicon glyphicon-trash"></span>   
                <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>