<%- model_class = Group -%>
<% page_header = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% title page_header %>
<div class="page-header">
  <div class="row">
    <div class="col-md-11">
      <h1><%= page_header %></h1>
    </div>
    <div class="col-md-1">
      <% if can? :create, Group %>
        <h1 class="text-right">
          <%= link_to new_group_path, :title => t("helpers.links.new"), :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </h1>
      <% end %>
    </div>
  </div>
</div>
<%= form_for @filterrific do |f| %>
<div class="chardin_box">
          <%= t '.search_name' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.text_field(
            :search_name,
            :placeholder => (t '.search_for_name'),
            class: 'filterrific-periodically-observed form-control'
          ) %>
    </div>
<% end %>
<%= render(partial: 'groups/list', locals: { groups: @groups,  model_class:  model_class }) %>