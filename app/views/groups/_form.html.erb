<%= form_for @group, :html => { :class => "event" } do |f| %>

    <% if @group.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'errors.template.header.other', :model => Group.model_name.human, :count => @group.errors.count %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'form-control' %>
    <%= error_span(@group[:name]) %>
  </div>

  <button type="submit" class="btn btn-primary" title="<%= t("helpers.links.save_changes") %>">
      <span class="glyphicon glyphicon-floppy-disk"></span>
  </button>

  <% if @group.id != nil %>
    <%= link_to group_path(@group), :title => t("helpers.links.cancel"), :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-remove"></span>    
    <% end %>
  <% else %>
    <%= link_to groups_path, :title => t("helpers.links.cancel"), :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-remove"></span>    
    <% end %>
  <% end %>

<% end %>
