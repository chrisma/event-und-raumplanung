<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><%= t('dashboard.my_tasks') %></h3>
	</div>
	<div class="panel-body">
		<% my_events.each do |event| %>
			<h4><%= link_to event.name, event_path(event) %></h4>
			<ul class="list-unstyled">
				<% my_tasks.where(event_id: event.id).each do |task| %>
					<li>
	         			<input class="task-done-checkbox" type="checkbox" <%= task.done ? 'checked' : '' %> data-taskpath="<%= task_path(task.id) %>">
	        				<%= link_to task.name, task_path(task) %>
	        			</input>
	        		</li>
	        	<% end %>
			</ul>
		<% end %>
	</div>
</div>