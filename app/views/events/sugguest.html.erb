<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.sugguest', 'Sugguest %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<%= form_for @event, :url => {action: "create_suggestion"}, :html => { :class => "form-horizontal event" } do |f| %>
    <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'errors.template.header.other', :model => Event.model_name.human, :count => @event.errors.count %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label model_class.human_attribute_name(:rooms), :class => 'control-label' %>
    <div class="controls">
      <%= f.select :rooms, options_from_collection_for_select(Room.all, :id, :name), {}, { :class => 'selectpicker', :multiple =>'' }%>
    </div>
    <%= error_span(@event[:rooms]) %>
  </div>
  <div class="control-group">
    <%= f.label model_class.human_attribute_name(:starts_at), :class => 'control-label' %>
    <div class="row">
      <div class="controls col-sm-6">
        <%= f.date_field :starts_at_date, :class => 'form-control' %>
         <%= error_span(@event[:starts_at_date]) %>
      </div>
      <div class="controls col-sm-6">
        <%= f.time_field :starts_at_time, :class => 'form-control' %>
        <%= error_span(@event[:starts_at_time]) %>
      </div>
    </div>
    
  </div>
 <div class="control-group">
    <%= f.label model_class.human_attribute_name(:ends_at) , :class => 'control-label' %>
    <div class="row">
      <div class="controls col-sm-6">
        <%= f.date_field :ends_at_date, :class => 'form-control' %>
        <%= error_span(@event[:ends_at_date]) %>
      </div>
      <div class="controls col-sm-6">
        <%= f.time_field :ends_at_time, :class => 'form-control' %>
        <%= error_span(@event[:ends_at_time]) %>
      </div>
    </div>
     
  </div>
 
  <%= f.submit t('.sugguest', :default => t("helpers.links.sugguest")), :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            events_path, :class => 'btn btn-default' %>

<% end %>
