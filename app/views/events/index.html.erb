<%- model_class = Event -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="well">
  <div class="row">
    <%= form_for @filterrific do |f| %>
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          Suche
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.text_field(
            :search_query,
            class: 'filterrific-periodically-observed form-control'
          ) %>
       </div>
      </div>
    </div> 
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          Nur eigene anzeigen
          <%= f.check_box(:own) %>
       </div>
      </div>
    </div> 
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          Sortiert bei
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, {class: 'form-control'}) %>
          <%# See below for the Student.options_for_sorted_by presenter method %>
       </div>
      </div>
    </div> 
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= link_to(
            'Filter zurÃ¼cksetzen',
            reset_filterrific_events_path,
          ) %>
       </div>
      </div>
    </div> 
    <%# add an automated spinner to your form when the list is refreshed %>
    <%= render_filterrific_spinner %>
  <% end %>
  </div>
</div>

<%= will_paginate @events %>

<%= render(
  partial: 'events/list',
  locals: { events: @events,  model_class:  model_class }
) %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_path,
            :class => 'btn btn-primary' %>
