<div class="well">
  <%= form_for @filterrific do |f| %>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.search' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.text_field(
            :search_query,
            :placeholder => "Search for " + Event.model_name.human.pluralize,
            class: 'filterrific-periodically-observed form-control'
          ) %>
       </div>
      </div>
    </div> 
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.only_show_own' %>
          <%= f.check_box(:own) %>
       </div>
      </div>
    </div> 
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.sorted_by' %>
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, {class: 'form-control'}) %>
          <%# See below for the Student.options_for_sorted_by presenter method %>
       </div>
      </div>
    </div> 
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.filtered_by_rooms' %>
           <%= f.select :room_ids, options_from_collection_for_select(Room.all, :id, :name, selected: @filterrific.room_ids) , {}, {:class=> 'selectpicker form-control', :id => 'selectpicker', :multiple =>'' }%>
       <script> $('#selectpicker').selectpicker(); </script>
       </div>
      </div>
    </div> 
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.starts_after' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.date_field(
            :starts_after,
            class: 'form-control'
          ) %>
       </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.starts_before' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.date_field(
            :starts_before,
            class: 'form-control'
          ) %>
       </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.ends_after' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.date_field(
            :ends_after,
            class: 'form-control'
          ) %>
       </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.ends_before' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.date_field(
            :ends_before,
            class: 'form-control'
          ) %>
       </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.participants_gte' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.number_field(
            :participants_gte,
            class: 'form-control'
          ) %>
       </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <div class="chardin_box">
          <%= t '.participants_lte' %>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.number_field(
            :participants_lte,
            class: 'form-control'
          ) %>
       </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= link_to( (t '.reset_filter'), reset_filterrific_events_path) %>
      <%= render_filterrific_spinner %>
    </div>
  </div>
  <% end %>
</div>