<%= form_for @event, :html => { :class => "form-horizontal event" } do |f| %>

    <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'errors.template.header.other', :model => Event.model_name.human, :count => @event.errors.count %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :Beschreibung, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :RÃ¤ume, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :rooms, options_from_collection_for_select(Room.all, :id, :name), {}, { :class => 'selectpicker', :multiple =>'' }%>
    </div>
    <%= error_span(@event[:room]) %>
  </div>
  <div class="control-group">
    <%= f.label :Teilnehmerzahl, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :participant_count, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:participant_count]) %>
  </div>
  <div class="control-group">
    <%= f.label :Startdatum, :class => 'control-label' %>
    <div class="row">
      <div class="controls col-sm-6">
        <%= f.date_field :start_date, :class => 'form-control' %>
      </div>
      <div class="controls col-sm-6">
        <%= f.time_field :start_time, :class => 'form-control' %>
      </div>
    </div>
    <%= error_span(@event[:start_date]) %> <%= error_span(@event[:start_time]) %>
  </div>
 <div class="control-group">
    <%= f.label :Enddatum, :class => 'control-label' %>
    <div class="row">
      <div class="controls col-sm-6">
        <%= f.date_field :end_date, :class => 'form-control' %>
      </div>
      <div class="controls col-sm-6">
        <%= f.time_field :end_time, :class => 'form-control' %>
      </div>
    </div>
    <%= error_span(@event[:end_date]) %> <%= error_span(@event[:end_time]) %>
  </div>
  <div class="control-group">
    <%= f.label :Privat, :class => 'control-label' %>
        <%= f.check_box :is_private %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            events_path, :class => 'btn btn-default' %>

<% end %>
