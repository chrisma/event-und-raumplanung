<% if @events.size != 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= Event.human_attribute_name(:name) %></th>
        <th><%= Event.human_attribute_name(:starts_at) %></th>
        <th><%= Event.human_attribute_name(:ends_at) %></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event_path(event) %></td>
          <td><%=l event.starts_at %></td>
          <td><%=l event.ends_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% if @events.size == 0 %>
  <em><%=t '.no_upcoming_events' %></em><br/>
<% end %>